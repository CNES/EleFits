@startuml
package EleFitsData {

class Record<T> {
}

class Raster<T, N, TContainer> {
}

class Column<T, TContainer> {
}

}

package EleFits {

class FitsFile {
+ open(filename)
+ close()
}

class SifFile {
+ header() : Header&
+ raster() : ImageRaster&
+ verifyChecksums()
+ updateChecksums()
}

class MefFile {
+ hduCount() : long
+ access(index) : Hdu&
+ accessFirst(name) : Hdu&
+ assignImageExt(name, raster) : ImageHdu&
+ assignBintableExt(name, columns...) : BintableHdu&
}

class Hdu {
+ index() : long
+ name() : string
+ header() : Header&
+ verifyChecksums()
+ updateChecksums()
}

class ImageHdu {
+ raster() : ImageRaster&
}

class BintableHdu {
+ columns() : BintableColumns&
}

class Header {
+ readAll() : string
+ parse(keyword) : Record
+ write(record)
+ parseSeq(keywords...) : Record...
+ writeSeq(records...)
}

class ImageRaster {
+ read() : Raster
+ write(raster)
}

class BintableColumns {
+ read(index) : Column
+ read(name) : Column
+ write(column)
+ readSeq(indices...) : Column...
+ readSeq(names...) : Column...
+ writeSeq(columns...)
}

}

FitsFile <|- SifFile
FitsFile <|-- MefFile
ImageHdu -|> Hdu
Hdu <|- BintableHdu
Hdu *-- Header
ImageHdu *-- ImageRaster
BintableHdu *-- BintableColumns
MefFile *-- Hdu
Header -- Record
ImageRaster -- Raster
BintableColumns -- Column
@enduml